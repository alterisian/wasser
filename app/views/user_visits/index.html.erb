<h1>Listing user_visits</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Lake</th>
      <th>Description</th>
      <th>Public</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_visits.each do |user_visit| %>
      <tr>
        <td><%= user_visit.user %></td>
        <td><%= user_visit.lake %></td>
        <td><%= user_visit.description %></td>
        <td><%= user_visit.public %></td>
        <td><%= link_to 'Show', user_visit %></td>
        <td><%= link_to 'Edit', edit_user_visit_path(user_visit) %></td>
        <td><%= link_to 'Destroy', user_visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

