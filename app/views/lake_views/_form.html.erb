
<%= simple_form_for(@lake_view) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :tl_lat %>
    <%= f.input :tl_lng %>
    <%= f.input :br_lat %>
    <%= f.input :br_lng %>
    <%= f.association :lake %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
